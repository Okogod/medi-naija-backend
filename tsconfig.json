{
  "compilerOptions": {
    "target": "ES2022",             // modern JS
    "module": "nodenext",           // required for ESM
    "moduleResolution": "nodenext",
    "outDir": "./dist",             // compiled JS goes here
    "rootDir": "./src",             // source TS
    "esModuleInterop": true,        // makes imports smoother
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,              // optional for debugging
    "declaration": true,            // optional, creates .d.ts
    "verbatimModuleSyntax": true
  },
  "include": ["src"]
}
